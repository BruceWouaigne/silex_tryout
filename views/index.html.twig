{% extends "layout.html.twig" %}

{% block body %}

<h1>REST request</h1>


<h2>Customers list (GET)</h2>
<hr />
I want to see the result in :
<select id="list_format">
	<option value="html">HTML</option>
	<option value="xml">XML</option>
	<option value="json">JSON</option>
</select>
<button onclick="$(document).attr('location', 'list/' + $('#list_format').val())">Go !!</button>

<h2>Single customer (GET)</h2>
<hr />
I want to see the result in :
<select id="single_format">
	<option value="html">HTML</option>
	<option value="xml">XML</option>
	<option value="json">JSON</option>
</select>
<br />
Customer's ID : <input type="text" id="single_customer_id" /><br />
<button onclick="$(document).attr('location', 'single/' + $('#single_format').val() + '/' + $('#single_customer_id').val())">Go !!</button>

<h2>Add customer (POST)</h2>
<hr />
<form action="add" id="add_form" method="POST">
	<table>
		<tr>
			<td>First name</td>
			<td><input type="text" name="first_name" /></td>
		</tr>
		<tr>
			<td>Last name</td>
			<td><input type="text" name="last_name" /></td>
		</tr>
		<tr>
			<td>Email address</td>
			<td><input type="text" name="email_address" /></td>
		</tr>
	</table>
	<input type="submit" value="GO !!" />
</form>

<h2>Edit customer (PUT)</h2>
<hr />
<form action="edit" id="edit_form" method="POST">
	<table>
		<tr>
			<td>ID</td>
			<td><input type="text" name="id" /></td>
		</tr>
		<tr>
			<td>First name</td>
			<td><input type="text" name="first_name" /></td>
		</tr>
		<tr>
			<td>Last name</td>
			<td><input type="text" name="last_name" /></td>
		</tr>
		<tr>
			<td>Email address</td>
			<td><input type="text" name="email_address" /></td>
		</tr>
	</table>
	<input type="submit" value="GO !!" />
</form>

<h2>Delete customer (DELETE)</h2>
<hr />
<br />
Customer's ID : <input type="text" id="delete_customer_id" /><br />
<button onclick="$(document).attr('location', 'delete/' + $('#delete_customer_id').val())">Go !!</button>

{% endblock %}